<h2>投稿数の前日比・前週比</h2>
    <table class="table table-bordered">>
      <tbody class = day>
        <tr>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
        </tr>
        <tr>
       　  <td><%= @today_book.count %></td>
       　  <td><%= @yesterday_book.count %></td>
     　    <td>
            <% if @yesterday_book.count == 0 %>
              前日の投稿はありません
            <% else %>
       　      <% @the_day_before_rate =   @today_book.count / @yesterday_book.count.to_f  %>
       　      <%= (@the_day_before_rate * 100).round %>
            <% end %>
          </td>
        </tr>
      </tbody>
      
      <tbody class = week >
        <tr>
          <th>今週の投稿数</th>
          <th>先週の投稿数</th>
          <th>先週比</th>
        </tr>
        <tr>
       　  <td><%= @this_week_book.count %></td>
       　  <td><%= @last_week_book.count %></td>
     　    <td>
            <% if @last_week_book.count == 0 %>
              先週の投稿はありません
            <% else %>
       　      <% @the_week_before_rate =   @this_week_book.count / @last_week_book.count.to_f  %>
       　      <%= (@the_week_before_rate * 100).round %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>